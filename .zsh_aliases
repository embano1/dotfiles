# https://harfangk.github.io/2016/09/19/manage-dotfiles-with-a-git-bare-repository.html
alias dotfiles="/usr/bin/git --git-dir=$HOME/.dotfiles.git/ --work-tree=$HOME"
alias d='dotfiles'

# tmux
alias tmuxinit="tmux new-session -n init \; split-window -dh \; select-pane -t 1 \; split-window -dv -p 80 'ctop' \; clock-mode \; select-pane -t 2 \; select-pane -t 0 \; new-window -n htop 'htop' \; select-window -t 1"

# Shell shortcuts
alias c=clear
alias l='exa -lha -snew --git'
alias vim-go='vim -u ~/.vimrc.go'
alias k=kubectl
alias w='watch -n1'
alias cat=bat
alias ping=prettyping
alias untar='tar -zxvf ' # https://opensource.com/article/18/9/handy-bash-aliases
alias myip='curl ipinfo.io/ip'

# Applications
alias vlc='/Applications/VLC.app/Contents/MacOS/VLC'

# Variables
export EMBA=/Users/${USER}/GO/src/github.com/embano1
export GOPATH=/Users/${USER}/GO
export GOBIN=$GOPATH/bin
export PATH=$PATH:$GOBIN
export EDITOR=/usr/local/bin/vim
